{{#if this.hasSimpleBingo}}
  <button class="ui fluid button" {{action 'submitResults'}}>
    Submit Results, or Keep Going!
  </button>
{{/if}}

{{#each tiles as |tile|}}
  <div
    role="button"
    aria-pressed={{tile.selected}}
    class="tile {{tile.tier}}"
    style="background-image: url({{tile.image}});background-size: cover;"
    onclick={{action "toggleTileSelect" tile}}
  >
    <p class="tile-word">{{tile.sponsor}} {{if tile.selected "selected"}}</p>
  </div>
{{/each}}

