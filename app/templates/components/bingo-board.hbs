{{#each tiles as |tile|}}
  <div role="button" aria-pressed={{tile.selected}} class="tile {{if tile.selected "selected"}} {{if tile.free "free"}}"
    onclick={{action "toggleTileSelect" tile}}>
    <p class="tile-word">{{tile.word}}</p>
  </div>
{{/each}}

{{#if shouldShowWin}}
  <div class="win-background" {{action (mut showWin) false}}>
    <h2 class="win-message">BINGO!</h2>
    <img class="tomster" src="/images/party-tomster@2x.png" width="291" height="416" alt="Party Tomster">
  </div>
{{/if}}
